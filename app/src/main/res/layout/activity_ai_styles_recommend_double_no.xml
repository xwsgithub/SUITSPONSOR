<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ai_styles_background"
    tools:context=".ai_styles_recommend_double_no">


    <android.support.constraint.Guideline
        android:id="@+id/guideline36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/ai_styles_top"
        app:layout_constraintBottom_toTopOf="@+id/guideline36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/ai_design"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/ai_styles_recommand_double_no_back"
        android:layout_width="24dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline36">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ai_styles_recommend_double_no_white"
                android:gravity="center"
                android:text="轮廓造型"
                android:textSize="20sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:background="@mipmap/ai_styles_recommend_double_no_black"
                android:gravity="center"
                android:text="门襟开度"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:background="@mipmap/ai_styles_recommend_double_no_white"
                android:gravity="center"
                android:text="刻口形态"
                android:textSize="20sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:background="@mipmap/ai_styles_recommend_double_no_black"
                android:gravity="center"
                android:text="串口位置"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:background="@mipmap/ai_styles_recommend_double_no_white"
                android:gravity="center"
                android:text="驳头宽窄"
                android:textSize="20sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:background="@mipmap/ai_styles_recommend_double_no_black"
                android:gravity="center"
                android:text="下摆形状"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:background="@mipmap/ai_styles_recommend_double_no_white"
                android:gravity="center"
                android:text="胸袋设计"
                android:textSize="20sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:background="@mipmap/ai_styles_recommend_double_no_black"
                android:gravity="center"
                android:text="腰带设计"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="200dp"
                android:background="@mipmap/ai_styles_recommend_double_no_white"
                android:gravity="center"
                android:text="开衩设计"
                android:textSize="20sp" />


        </LinearLayout>


    </ScrollView>


    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/activity_ai_styles_recommend_double_no_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline37"
        android:background="@mipmap/ai_styles_next"/>



    <android.support.constraint.Guideline
        android:id="@+id/guideline37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />


</android.support.constraint.ConstraintLayout>